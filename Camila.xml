void preenche(){  //preenche o vetor ordens, que é iniciado com 0, com -1, que é a ordem indefinida.
    int j=0;
    for (j = 0; j &lt; N; j++){
        ordens[j] = -1;
    }

}

int maioria[2] = {0, 0}; //calcula a maioria das ordens que foram recebidas para chegar a um consenso.


void  calculaMaioria(){
    int i=0;
    for (i = 0; i &lt; N ; i++) 
    {
        if (ordens[i] == 0) 
        {
            maioria[0]++;
        }
        else if (ordens[i]==1) 
        {
            maioria[1]++;
        }
    }
}



bool completo = false;  //verifica se todos os tenentes já enviaram suas mensagens
void verifica(){
 bool stopLoop = false;
 bool aux = false;
    int i;
    for(i = 0; i &lt; N &amp;&amp; !stopLoop; i++)
    {
        if(ordens[i] == -1)
        {
            aux = false;
            stopLoop = true;
        }
        else
        {
           aux = true; 
        }
    }
   completo = aux;
}

